@model BrandListViewModel
<!-- aside Widget -->
<div class="aside">
    <h3 class="aside-title">Brand</h3>
    <div class="checkbox-filter">

        @foreach (var item in Model.Brands)
        {
            <div class="input-checkbox">
                <input type="checkbox" id="brand-1">
                <label for="brand-1">
                    <span></span>
                    @item.Name
                </label>
            </div>
        }
    </div>
</div>
<!-- /aside Widget -->