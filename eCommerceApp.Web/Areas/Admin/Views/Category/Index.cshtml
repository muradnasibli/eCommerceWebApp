@model IEnumerable<eCommerceApp.Domains.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    @*<form asp-action="Delete" method="post" asp-controller="Category" asp-area="Admin" style="margin-top:5px" >
                        <input type="hidden" name="Id" value="@item.Id" />
                        <input type="submit" name="Id" value="Delete" class="btn btn-outline-danger" />
                    </form>*@
                    <a asp-action="Delete" asp-controller="Category" asp-area="Admin" class="btn btn-danger" asp-route-id="@item.Id" onclick="return confirm('Are you sure want to delete?')">
                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
