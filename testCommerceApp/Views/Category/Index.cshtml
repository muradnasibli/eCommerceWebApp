@model IEnumerable<eCommerceApp.Domains.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a class="btn btn-outline-danger delete"
                   data-id="@item.Id"
                   data-controller="Category"
                   data-action="Delete"
                   data-body-message="Siz bu informasiyani silməkdən əminsiniz?">
                    Məlumatı sil
                </a>
            </td>
        </tr>
}
    </tbody>
</table>
